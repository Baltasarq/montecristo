<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devbaltasarq.montecristo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Montecristo</name>
    <description>
	Después de huir del castillo de If,
	arribas a la Isla de Montecristo,
	para tratar de encontrar el tesoro
	del que el abate te confesó su existencia y paradero.        
    </description>
    <author email="baltasarq@gmail.com" href="http://caad.es/baltasarq/">
        Baltasar
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

	<!--
        	ldpi    : 36x36 px
        	mdpi    : 48x48 px
        	hdpi    : 72x72 px
        	xhdpi   : 96x96 px
        	xxhdpi  : 144x144 px
        	xxxhdpi : 192x192 px
    	-->

        <icon density="hdpi" src="res/cross-hdpi.png" />
        <icon density="ldpi" src="res/cross-ldpi.png" />
        <icon density="mdpi" src="res/cross-mdpi.png" />
        <icon density="hdpi" src="res/cross-hdpi.png" />
        <icon density="xhdpi" src="res/cross-xhdpi.png" />
        <icon density="xxhdpi" src="res/cross-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/cross-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
